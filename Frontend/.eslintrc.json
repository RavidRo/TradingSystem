{
	"env": {
		"browser": true,
		"es2021": true,
		"mocha": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"camelcase": ["warn", { "properties": "always" }],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
